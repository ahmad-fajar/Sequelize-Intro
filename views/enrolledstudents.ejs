<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Enrolled Students</title>
  </head>
  <body>
    <h2><%= subject_data.subject_name %></h2>

  <table>
    <tr>
      <td>No.</td>
      <th>Name</th>
      <th>Score</th>
    </tr>

    <% var i = 1 %>
    <% student_data.forEach(student => { %>
      <tr>
        <td><%= i++ %></td>
        <td><%= student.Student.first_name + ' ' + student.Student.last_name %></td>
      <% if (!student.score) { %>
        <!-- note: student.id == StudentId -->
        <td><a href="/subjects/<%= subject_data.id %>/<%= student.id %>/givescore">Give Score</a></td>
      <% } else { %>
        <td><%= student.score %></td>
      <% } %>
      </tr>
    <% }) %>

  </table>
  </body>
</html>