<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Students</title>
  </head>
  <body>
    <header>
      <%- include ./partials/header %>
    </header>

    <h1>Students</h1>

    <a href="/students/addstudent">Add New Student</a>
    <br>
    <br>

    <table>
      <tr>
        <th>No.</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
        <th>Options</th>
      </tr>

    <% var i = 1 %>
    <% student_data.forEach(list => { %>
      <tr>
        <td><%= i++ %></td>
        <td><%= list.first_name %></td>
        <td><%= list.last_name %></td>
        <td><%= list.email %></td>
        <td><a href="/students/addsubject/<%= list.id %>">Add Subject</a></td>
        <td>
          <a href="/students/edit/<%= list.id %>">Edit</a> |
          <a href="/students/delete/<%= list.id %>" onclick="return confirm('Are you sure want to delete <%= list.first_name %> <%= list.last_name %>')">Delete</a>
        </td>
      </tr>
    <% }); %>

    </table>

  </body>
</html>