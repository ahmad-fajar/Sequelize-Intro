<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Teachers</title>
  </head>
  <body>
    <header>
      <%- include ./partials/header %>
    </header>

    <h1>Teachers</h1>

    <a href="/teachers/addteacher">Add Teacher</a>
    <br><br>

    <table>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Options</th>
      </tr>

    <% var i = 1 %>
    <% data.forEach(list => { %>
      <tr>
        <td><%= i++ %></td>
        <td><%= list.first_name %></td>
        <td><%= list.last_name %></td>
        <td><%= list.email %></td>
          <% if (list.SubjectId == undefined) { %>
            <td>unassigned</td>
          <% } else { %>
            <td><%= list.Subject.subject_name %></td>
          <% } %>

        <td>
          <a href="/teachers/edit/<%= list.id %>">Edit</a> |
          <a href="/teachers/delete/<%= list.id %>" onclick="return confirm('Are you sure want to delete <%= list.first_name %> <%= list.last_name %>')">Delete</a>
        </td>
      </tr>
    <% }); %>

    </table>

  </body>
</html>