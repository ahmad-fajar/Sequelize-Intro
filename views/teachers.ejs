<!DOCTYPE html>
<html>
  <head>
    <%- include ./partials/head %>
  </head>
  <body>
    <header>
      <%- include ./partials/header %>
    </header>

    <h1>Teachers</h1>

    <div class="container">
        <div class="row col-md-6 col-md-offset-2 custyle">
        <table class="table table-striped custab">
        <thead>
        <a href="/teachers/addteacher" class="btn btn-primary btn-xs pull-right"><b>+</b> Add new teacher</a>
          <tr>
            <th>No.</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th class="text-center">Options</th>
          </tr>
        </thead>

        <% var i = 1 %>
        <% data.forEach(list => { %>
          <tr>
            <td><%= i++ %></td>
            <td><%= list.first_name %></td>
            <td><%= list.last_name %></td>
            <td><%= list.email %></td>
            <% if (list.SubjectId == undefined) { %>
              <td>unassigned</td>
            <% } else { %>
              <td><%= list.Subject.subject_name %></td>
            <% } %>
            <td class="text-center"><a class='btn btn-info btn-xs' href="/teachers/edit/<%= list.id %>"><span class="glyphicon glyphicon-edit"></span> Edit</a> </td>
            <td class="text-center"><a href="/teachers/delete/<%= list.id %>" onclick="return confirm('Are you sure want to delete <%= list.first_name %> <%= list.last_name %>')" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
          </tr>
        <% }); %>

        </table>
        </div>
    </div>

  </body>
</html>